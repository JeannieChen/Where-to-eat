<%- include("../partials/header") %>

<div class="container">
	<h3 style="text-align: center"> Add New Comment to <%= restaurant.name %></h3>
	<form action="/restaurant/<%= restaurant._id %>/comments" method="POST">
		<div style="width: 65%; margin: 2rem auto">
			<div class="form-group">
				<textarea rows="5" name="comment[text]" class="form-control" id="formGroupExampleInput2"> What would you like to say?</textarea>
  			</div>
			
			<div class="form-group">
    			<label for="formGroupExampleInput"> Rating </label>
	  			<input type="number" name="comment[rating]" placeholder="1 star - 5 star" min="1" max="5" step="1" class="form-control" id="formGroupExampleInput">
  			</div>
			
			<button type="submit" class="btn btn-primary btn-block">Submit</button>	
		</div>
	</form>
</div>

<%- include("../partials/footer") %>